<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a2106088.amaru.Usuario.ActivitySelectedGroupAmaru"
    android:background="@drawable/fondoinstr"
    tools:showIn="@layout/app_bar_activity_selected_group_amaru">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="GroupName"
                android:textAlignment="center"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">


                <LinearLayout
                    android:layout_width="228dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageGroup"
                        android:layout_width="190dp"
                        android:layout_height="142dp"
                        android:layout_gravity="center"

                        app:srcCompat="@color/white" />

                    <RatingBar
                        android:id="@+id/ratingBarGroup"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:visibility="visible" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="23dp"
                        android:text="Instructor"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/txtGroupInstructor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="GroupInstructor"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btnVerPerfilInstructor"
                        android:layout_width="102dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="Ver perfil"
                        style="@style/black_button"
                        android:onClick="verPerfilInstructor"
                        android:textAllCaps="false" />



                </LinearLayout>


            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtGroupDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="GroupDescription"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="86dp" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5" />

                <TextView
                    android:id="@+id/txtRateNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="This Rate"
                    android:textAlignment="center"
                    android:textSize="24sp" />

            </LinearLayout>


            <Button
                android:id="@+id/btnRateGroup"
                android:layout_width="110dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:text="Calificar"
                style="@style/black_button"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="78dp"
                tools:layout_editor_absoluteY="494dp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lista de clases pendientes"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:stretchColumns="0,1,2"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tableGrupo">

                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Lugar"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:textAlignment="center"
                        android:background="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Fecha"
                        android:layout_margin="1dp"
                        android:layout_column="1"
                        android:textAlignment="center"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Hora"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_column="2"
                        />
                </TableRow>
            </TableLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comentarios"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:stretchColumns="0,1"
                android:gravity="center"
                android:id="@+id/tableGrupoComents">

                <TableRow
                    android:background="#000000"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Usuario"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:textAlignment="center"
                        android:background="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text="Comentario"
                        android:layout_margin="1dp"
                        android:layout_column="1"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </TableRow>
            </TableLayout>




        </LinearLayout>


    </ScrollView>

</LinearLayout>

